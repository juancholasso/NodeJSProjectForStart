<!doctype html>
<html lang="en">
<head>
	<% include ../includes/header.ejs %>
	<title>Paper Dashboard PRO by Creative Tim</title>
</head>

<body>
	<div class="wrapper">
        
        <% include ../includes/dashboard.ejs %>

	    <div class="main-panel">
            
            <% include ../includes/navbar.ejs %>

            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <form id="registerFormValidation" action="create" method="post" novalidate="">
                                    <div class="card-header">
                                        <h4 class="card-title">
                                            Crear Usuario
                                        </h4>
                                    </div>
                                    <div class="card-content">
                                        <div class="form-group">
                                            <label class="control-label">
                                                Nombre<star>*</star>
                                            </label>
                                            <input class="form-control"
                                                    name="name"
                                                    type="text"
                                                    required="true",
                                                    maxlength=50
                                            />
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">
                                                Apellido<star>*</star>
                                            </label>
                                            <input class="form-control"
                                                    name="lastname"
                                                    type="text"
                                                    required="true",
                                                    maxlength=50
                                            />
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">
                                                Password<star>*</star>
                                            </label>
                                            <input class="form-control"
                                                    name="password"
                                                    type="password"
                                                    required="true",
                                                    maxlength=20
                                            />
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">
                                                Documento<star>*</star>
                                            </label>
                                            <input class="form-control"
                                                    name="iddocument"
                                                    type="number"
                                                    required="true",
                                                    maxlength=12
                                            />
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">
                                                Tel√©fono<star>*</star>
                                            </label>
                                            <input class="form-control"
                                                    name="telephone"
                                                    type="text"
                                                    required="true",
                                                    maxlength=13
                                            />
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">
                                                Email<star>*</star>
                                            </label>
                                            <input class="form-control"
                                                    name="email"
                                                    type="text"
                                                    required="true",
                                                    email="true"
                                            />
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">
                                                Email<star>*</star>
                                            </label>
                                            <% if (roles) { %>
                                                <% roles.forEach(function(rol){ %>
                                                    <div class="radio">
                                                        <input type="radio" name="idrol" id="<%= rol.rol %>" value="<%= rol.idrol %>" checked="">
                                                        <label for="<%= rol.rol %>">
                                                            <%= rol.rol %>
                                                        </label>
                                                    </div>
                                                <% }) %>    
                                            <% } %>
                                        </div>
                                        <div class="category"><star>*</star>Campos Requeridos</div>
                                    </div>
                                    <div class="card-footer">
                                        <button type="submit" class="btn btn-info btn-fill pull-left">Enviar</button>
                                        <div class="clearfix"></div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
			<% include ../includes/footer.ejs %>
	    </div>
	</div>

</body>

    <% include ../includes/scripts.ejs %>
    <% include ../includes/sweetalerts.ejs %>
    <script type="text/javascript">
        $().ready(function(){
			$('#registerFormValidation').validate();
        });
    </script>
</html>
