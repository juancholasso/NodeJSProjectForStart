<!doctype html>
<html lang="en">
<head>
	<% include ../includes/header.ejs %>
	<title>Paper Dashboard PRO by Creative Tim</title>
</head>

<body>
	<div class="wrapper">
        
        <% include ../includes/dashboard.ejs %>

	    <div class="main-panel">
            
            <% include ../includes/navbar.ejs %>

	        <div class="content">
	            <div class="container-fluid">
	                <div class="row">
	                    <div class="col-md-12">
							<h4 class="title">Roles</h4>
							<div class="card-content">
								<a href="backend/roles/create" class="btn btn-fill btn-info">Agregar Rol</a>
							</div>
	                        <div class="card">
	                            <div class="card-content">
	                                <div class="toolbar">
	                                    <!--Here you can write extra buttons/actions for the toolbar-->
	                                </div>
                                    <div class="fresh-datatables">
										<table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
											<thead>
												<tr>
													<th>#</th>
													<th>Rol</th>
													<th>Permisos</th>
													<th class="disabled-sorting">Opciones</th>
												</tr>
											</thead>
											<tfoot>
												<tr>
													<th>#</th>
													<th>Rol</th>
													<th>Permisos</th>
													<th>Opciones</th>
												</tr>
											</tfoot>
											<tbody>
												<% if (roles) { %>
													<% roles.forEach(function(rol){ %>
														<tr>
															<td><%= rol.idrol %></td>
															<td><%= rol.rol %></td>
															<td>
																<a href="backend/roles/<%=rol.idrol %>/permissions" class="btn btn-simple btn-info btn-icon like"><i class="ti-search"></i></a>
															</td>
															<td>
																<a href="backend/roles/<%=rol.idrol %>/show" class="btn btn-simple btn-info btn-icon like"><i class="ti-search"></i></a>
																<a href="backend/roles/<%=rol.idrol %>/delete" class="btn btn-simple btn-warning btn-icon edit"><i class="ti-trash"></i></a>
																<!--input type="checkbox" class="switch-plain" checked-->
															</td>
														</tr>
													<% });%>
												<% } %>
											</tbody>
									    </table>
									</div>
	                            </div>
	                        </div><!--  end card  -->
	                    </div> <!-- end col-md-12 -->
	                </div> <!-- end row -->
	            </div>
	        </div>

			<% include ../includes/footer.ejs %>
			
	    </div>
	</div>

</body>

    <% include ../includes/scripts.ejs %>
	<% include ../includes/sweetalerts.ejs %>
	<%- locals.flash %>
	
	<script type="text/javascript">
	    $(document).ready(function() {

	        $('#datatables').DataTable({
	            "pagingType": "full_numbers",
	            "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
	            responsive: true,
	            language: {
	            search: "_INPUT_",
		            searchPlaceholder: "Search records",
		        }
			});
			
	        var table = $('#datatables').DataTable();

	    });
	</script>
</html>
