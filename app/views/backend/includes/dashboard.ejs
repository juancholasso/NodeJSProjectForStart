<div class="sidebar" data-background-color="brown" data-active-color="danger">
<!--
	Tip 1: you can change the color of the sidebar's background using: data-background-color="white | brown"
	Tip 2: you can change the color of the active button using the data-active-color="primary | info | success | warning | danger"
-->
	<div class="logo">
		<a href="https://www.creative-tim.com" class="simple-text logo-mini">
			CT
		</a>

		<a href="https://www.creative-tim.com" class="simple-text logo-normal">
			Creative Tim
		</a>
	</div>
	<div class="sidebar-wrapper">
		<div class="user">
			<div class="photo">
				<img src="\backend/assets/img/faces/face-2.jpg" />
			</div>
			<div class="info">
				<a data-toggle="collapse" href="#collapseExample" class="collapsed">
					<span>
						Chet Faker
						<b class="caret"></b>
					</span>
				</a>
				<div class="clearfix"></div>

				<div class="collapse" id="collapseExample">
					<ul class="nav">
						<li>
							<a href="#profile">
								<span class="sidebar-mini">Mp</span>
								<span class="sidebar-normal">My Profile</span>
							</a>
						</li>
						<li>
							<a href="#edit">
								<span class="sidebar-mini">Ep</span>
								<span class="sidebar-normal">Edit Profile</span>
							</a>
						</li>
						<li>
							<a href="#settings">
								<span class="sidebar-mini">S</span>
								<span class="sidebar-normal">Settings</span>
							</a>
						</li>
					</ul>
				</div>
			</div>
		</div>
		<ul class="nav">
			<li class="active">				
				<% if (isRole("admin")) { %>
					<a data-toggle="collapse" href="#superAdministador" aria-expanded="true">
						<i class="ti-panel"></i>
						<p>SuperAdministrador
							<b class="caret"></b>
						</p>
					</a>
					<div class="collapse in" id="superAdministador">
						<ul class="nav">
							<li>
								<a href="/backend/roles">
									<span class="sidebar-mini">R</span>
									<span class="sidebar-normal">Roles</span>
								</a>
							</li>
							<li>
								<a href="/backend/users">
									<span class="sidebar-mini">U</span>
									<span class="sidebar-normal">Usuarios</span>
								</a>
							</li>
							<li>
								<a href="/backend/permissions">
									<span class="sidebar-mini">P</span>
									<span class="sidebar-normal">Permisos</span>
								</a>
							</li>
						</ul>
					</div>
				<% } %>
				<% if (can("send-mail")) { %>
					<a href="/mail">
						<i class="ti-panel"></i>
						<p>Enviar Email
						</p>
					</a>
				<% } %>
				<% if (can("upload-private-file-get")) { %>
					<a href="/upload">
						<i class="ti-panel"></i>
						<p>Upload File
						</p>
					</a>
				<% } %>
				<a data-toggle="collapse" href="#dashboardOverview" aria-expanded="true">
					<i class="ti-panel"></i>
					<p>Dashboard
						<b class="caret"></b>
					</p>
				</a>
				<div class="collapse in" id="dashboardOverview">
					<ul class="nav">
						<li>
							<a href="\dashboard/overview.html">
								<span class="sidebar-mini">O</span>
								<span class="sidebar-normal">Overview</span>
							</a>
						</li>
						<li>
							<a href="\dashboard/stats.html">
								<span class="sidebar-mini">S</span>
								<span class="sidebar-normal">Stats</span>
							</a>
						</li>
					</ul>
				</div>
			</li>
		</ul>
	</div>
</div>